<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:gravity="center">
            <size
                android:height="@dimen/accessibility_touch_target_min_size"
                android:width="56dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item
        android:top="10dp"
        android:bottom="10dp"
        android:left="0dp"
        android:right="@dimen/crop_thumb_offset">
        <shape
            android:gravity="center" android:shape="oval">
            <size
                android:height="28dp"
                android:width="28dp"/>
            <solid android:color="@android:color/black"/>
        </shape>
    </item>
    <item
        android:top="10dp"
        android:bottom="24dp"
        android:left="14dp"
        android:right="@dimen/crop_thumb_offset">
        <shape
            android:gravity="center" android:shape="rectangle">
            <size
                android:height="@dimen/crop_thumb_radius"
                android:width="@dimen/crop_thumb_radius"/>
            <solid android:color="@android:color/black"/>
        </shape>
    </item>
</layer-list>