<RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sign_in_text_top_margin"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="32dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/sign_in_text"
        android:fontFamily="sans-serif-regular"
        android:textSize="@dimen/sign_in_text_font_size"
        android:textColor="@color/text_color_white"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:background="@android:color/transparent">
      <Button
          android:id="@+id/btn_sign_in"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/accessibility_touch_target_min_size"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:paddingStart="27dp"
          android:paddingEnd="27dp"
          android:text="@string/sign_in_button"
          android:fontFamily="sans-serif-medium"
          android:textAllCaps="true"
          android:textSize="14sp"
          android:textColor="@android:color/white"
          />
    </FrameLayout>

    <Button
        android:id="@+id/btn_learn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/accessibility_touch_target_min_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:text="@string/sign_in_learn_more_button"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textColor="@color/text_color_white"
        android:background="?attr/selectableItemBackgroundBorderless"
        />
  </LinearLayout>

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:paddingLeft="@dimen/sign_in_image_margin_sides"
      android:paddingRight="@dimen/sign_in_image_margin_sides"
      android:layout_marginBottom="@dimen/sign_in_image_margin_bottom"
      android:src="@drawable/splashscreen_bg"
      />

  <Button
      android:id="@+id/btn_continue_without_signing_in"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minHeight="@dimen/accessibility_touch_target_min_size"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="12dp"
      android:text="@string/sign_in_continue_without_signing_in_button"
      android:fontFamily="sans-serif-medium"
      android:textAllCaps="true"
      android:textSize="14sp"
      android:textColor="@color/text_color_white"
      android:background="?attr/selectableItemBackgroundBorderless"
      />

</RelativeLayout>
