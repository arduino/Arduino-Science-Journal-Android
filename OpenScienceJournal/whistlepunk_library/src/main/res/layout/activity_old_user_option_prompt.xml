<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.google.android.apps.forscience.whistlepunk.accounts.OldUserOptionPromptActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="16dp"
            android:text="@string/old_user_option_prompt_headline"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/prompt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="16dp"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="27dp"
            android:layout_marginStart="40dp"
            android:background="@color/old_user_option_prompt_hairlines"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginStart="40dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/drive_view"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:src="@drawable/drive_choice1_36px"
                android:contentDescription="@null"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="14dp"
                    android:textColor="@color/text_color_dark_grey"
                    android:text="@string/drive_choice_headline"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="52dp"
                    android:textColor="#4a4a4a"
                    android:text="@string/drive_choice_text"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:background="@color/old_user_option_prompt_hairlines"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginStart="40dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/delete_view"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:src="@drawable/delete_choice2_36px"
                android:contentDescription="@null"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="14dp"
                    android:textColor="@color/text_color_dark_grey"
                    android:text="@string/delete_choice_headline"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="52dp"
                    android:textColor="#4a4a4a"
                    android:text="@string/delete_choice_text"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:background="@color/old_user_option_prompt_hairlines"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/select_view"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:src="@drawable/select_choice3_36px"
                android:contentDescription="@null"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="14dp"
                    android:textColor="@color/text_color_dark_grey"
                    android:text="@string/select_choice_headline"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="52dp"
                    android:textColor="#4a4a4a"
                    android:text="@string/select_choice_text"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
